{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/(pages)/favorites/page.tsx",
    "app/(pages)/favorites/page.tsx",
    "app/page.tsx",
    "app/not-found.tsx"
, "app/hooks/useWeatherForecast.ts", "app/utils/localStorage.ts", "app/(pages)/city/[id]/page.jsx", "app/components/mainPage/SearchBar.tsx"  ],
  "exclude": ["node_modules"]
}
